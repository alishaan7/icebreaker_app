<!DOCTYPE html>
<html>
  <head>
    <% include ../partials/head %>
  </head>
  <body>
    <div class="container">
      <header class="header clearfix">
          <% include ../partials/header %>
      </header>

      <main role="main">
        <div class="jumbotron">
            <h1 class="display-3">Icebreaker App</h1>
            <p class="lead">Project work for flatiron school</p>
          </div>

          <div class="row marketing">
            <% questions.forEach(function(question){ %>
            <div class="col-lg-12">
                <h4><%= question.content %></h4>
                <p><a class="btn btn-primary" href="icebreakers/new?questionID=<%= question.id %>" role="button">Create IceBreaker</a></p>
            </div>
            <% }) %>
          </div>
      </main>

      <footer class="footer">
        <% include ../partials/footer %>
      </footer>

    </div> <!-- /container -->
  </body>
</html>
