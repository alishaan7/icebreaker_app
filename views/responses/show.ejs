<!DOCTYPE html>
<html>
  <% include ../partials/head.ejs %>
  <body>
    <div class="container">
      <% include ../partials/header.ejs %>

      <main role="main">
        <div class="row marketing">
          <div class="col-lg-12">
            <div class="card">
              <h4 class="card-header"><%= question.content %></h4>
              <div class="card-body">

                <% responses.forEach(function(response) { %>
                <div class="card" style="margin-bottom: 20px">
                  <h4 class="card-header"><%= response.email %></h4>
                  <div class="card-body">
                    <p class="card-text"><%= response.response_text %></p>
                  </div>
                </div>
                <% }) %>
              </div>
            </div>
          </div>
        </div>
      </main>

      <footer class="footer">
        <% include ../partials/footer %>
      </footer>
    </div> <!-- /container -->
  </body>
</html>
